<?xml version="1.0" encoding="utf-8"?>


<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="32dp"
    app:cardCornerRadius="24dp"
    app:cardUseCompatPadding="true">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/imageView_item_fav"
            android:layout_width="match_parent"
            android:layout_height="164dp"
            android:scaleType="fitXY"
            android:src="@drawable/breakfast"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:riv_corner_radius_top_left="24dp"
            app:riv_corner_radius_top_right="24dip" />

        <TextView
            android:id="@+id/textView_meal_title_item_fav"
            style="@style/header_two"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="4dp"
            android:layout_marginVertical="12dp"
            android:textSize="12sp"
            android:gravity="center"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView_item_fav"
            tools:text="Traditional French omelette" />

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/icon_remove_item_fav"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/icon_background"
            android:src="@drawable/baseline_remove_24"
            app:layout_constraintEnd_toEndOf="@id/imageView_item_fav"
            app:layout_constraintTop_toTopOf="@id/imageView_item_fav"
            app:riv_corner_radius_bottom_left="24dp"
            app:riv_corner_radius_top_right="24dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>